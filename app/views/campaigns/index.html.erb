<p id="notice"><%= notice %></p>

<h1>Campaigns</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prefix</th>
      <th>Suffix</th>
      <th>Code length</th>
      <th>Code count</th>
      <th>Charset</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.name %></td>
        <td><%= campaign.prefix %></td>
        <td><%= campaign.suffix %></td>
        <td><%= campaign.code_length %></td>
        <td><%= campaign.code_count %></td>
        <td><%= campaign.charset %></td>
        <td><%= campaign.started_at %></td>
        <td><%= campaign.ended_at %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

