
<%= simple_form_for(@campaign) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :prefix %>
    <%= f.input :suffix %>
    <%= f.input :code_length %>
    <%= f.input :code_count %>
    <%= f.input :charset %>
    <%= f.input :started_at %>
    <%= f.input :ended_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
